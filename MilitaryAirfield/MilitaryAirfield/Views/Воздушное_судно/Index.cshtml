                @Html.DisplayFor(modelItem => item.Узлы_маневрирования.ID_узлов_маневрирования)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.ID_Воздушного_судна }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.ID_Воздушного_судна }) |
