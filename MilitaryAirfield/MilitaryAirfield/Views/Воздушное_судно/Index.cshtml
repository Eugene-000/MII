        </th>
        <th>
            @Html.DisplayNameFor(model => model.Длина_в_м_)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Мощность_или_тяга_двигателя)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Дальность_полёта_в_км_)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Вооружение.Используемые_ракеты)
