@model IEnumerable<MilitaryAirfield.Models.Воздушное_судно>

@{
    ViewBag.Title = "Воздушное судно";
}

@{ if ( Server.UrlDecode(Request.Cookies["My localhost cookies"]["Role"])==null)
    {
<h5>Нет прав доступа!</h5>
        } }
<h2>Таблица "Воздушное судно"</h2>

<form method="get">
    <div class="form-inline">
        <label class="control-label">Дальность полета(в км): </label>
        @Html.DropDownList("RangeOfFlight", new List<SelectListItem>
    {
                new SelectListItem() {Text="Не выбрано",Value="null", Selected=true},
                new SelectListItem() {Text="1-1000",      Value="1"},
                new SelectListItem() {Text="1001-2000",     Value="1001"},
                new SelectListItem() {Text="2001-3000",     Value="2001"},
                new SelectListItem() {Text="3001-4000",     Value="3001"},
                new SelectListItem() {Text="4001-5000",     Value="4001"},
                new SelectListItem() {Text="5001-6000",     Value="5001"},
                new SelectListItem() {Text="6001-7000",     Value="6001"},
                new SelectListItem() {Text="7001-8000",     Value="7001"},
                new SelectListItem() {Text="8001+",       Value="8001"}
    },
                    htmlAttributes: new { @class = "form-control" })
        <input type="submit" name="Filter1" value="Фильтр" class="btn btn-default" />
    </div>
    <br />

    <div class="form-inline">
        <label class="control-label">Тип воздушного судна: </label>
        @Html.DropDownList("AircraftType", new List<SelectListItem>
    {
                new SelectListItem() {Text="Не выбрано",Value="null"},
                new SelectListItem() {Text="Истребитель",  Value="Истребитель"},
                new SelectListItem() {Text="Вертолёт",      Value="Вертолёт"},
                new SelectListItem() {Text="Бомбардировщик", Value="Бомбардировщик"},
                new SelectListItem() {Text="Штурмовик",  Value="Штурмовик"}
    },
                    htmlAttributes: new { @class = "form-control" })
        <input type="submit" name="Filter2" value="Фильтр" class="btn btn-default" />
    </div>
</form>
<br />

<p>
    @Html.ActionLink("Добавить запись", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Регистрационный_номер_судна)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Тип_воздушного_судна)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Название_воздушного_судна)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Год_создания)
        </th>
        <th>
